<ClientTools:ChildWindow x:Class="UnicontaClient.Controls.Dialogs.CWBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Util="clr-namespace:Uniconta.ClientTools.Util;assembly=ClientTools"
        xmlns:ClientTools="clr-namespace:Uniconta.ClientTools;assembly=ClientTools"
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight},Converter={Util:ScreenRatioConverter},ConverterParameter='0.90'}" 
        Width="500" MinHeight="600" ResizeMode="CanResize" KeyDown="ChildWindow_KeyDown">
    <Grid Margin="2" Background="{StaticResource LayoutGridColor}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid x:Name="layoutGrid">
            <!--Add the Web Control from Code-->
        </Grid>
    </Grid>
</ClientTools:ChildWindow>
