<Pages:GridBasePage xmlns:UC="clr-namespace:UnicontaClient.Pages;assembly=UnicontaPages"
x:Class="UnicontaClient.Pages.CustomPage.EDeliveryMappingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:CorasauControls="clr-namespace:Uniconta.ClientTools.Controls;assembly=ClientTools"
    xmlns:localPage="clr-namespace:UnicontaClient.Pages.CustomPage" 
    xmlns:editor="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:Pages="clr-namespace:Uniconta.ClientTools.Page;assembly=ClientTools"  
    xmlns:Util="clr-namespace:Uniconta.ClientTools.Util;assembly=ClientTools"
    xmlns:docking="http://schemas.devexpress.com/winfx/2008/xaml/docking">
    <UserControl.Resources>
        <Util:ListStringConverter x:Key="ListToStringConverter"/>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="{StaticResource LayoutGridColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <CorasauControls:CorasauRibbonControl x:Name="localMenu" XMLSourcePath=";component/Pages/Debtor/EDeliveryMappingRibbon.xml"/>
        <Grid Grid.Row="1" Margin="5" x:Name="gridHeaderParam">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=Group}" Grid.Column="0"/>
            <CorasauControls:CorasauLayoutItem x:Name="liMappinggroup" Grid.Column="2" ButtonClicked="liMappinggroup_ButtonClicked" Style="{StaticResource LayoutItemsstyle}">
                <CorasauControls:LookupEditor x:Name="leMappinggroup" SelectedIndexChanged="leMappinggroup_SelectedIndexChanged" HorizontalContentAlignment="Right"/>
                <CorasauControls:CorasauLayoutItem.ButtonContent>
                    <Image Source="{dx:SvgImageSource Uri=/UnicontaPages;component/Assets/img/Plus_8x8.svg, UsePalette=True}" Height="14" dx:WpfSvgPalette.Palette="{StaticResource SVGIconPallete}"/>
                </CorasauControls:CorasauLayoutItem.ButtonContent>
            </CorasauControls:CorasauLayoutItem>

            <TextBlock x:Name="tbDocumentNum" Grid.Column="4" Visibility="Collapsed"/>
            <CorasauControls:LookupEditor x:Name="leDocumentNum" Grid.Column="6" Visibility="Collapsed" GotFocus="leDocumentNum_GotFocus"/>
        </Grid>
        <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{StaticResource WindowHeaderGradient}" />
        <CorasauControls:BusyIndicator x:Name="busyIndicator" Grid.Row="3" BusyContent="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=LoadingMsg}">
            <docking:DockLayoutManager x:Name="DockingControl" AllowCustomization="False">
                <docking:LayoutGroup x:Name="lGroup" AllowDrag="False" AllowDock="False" AllowFloat="False" Orientation="Vertical" AllowContextMenu="False" >
                    <docking:LayoutPanel x:Name="layOutEdeliveryMapping" FloatOnDoubleClick="False" AllowDrag="False" AllowDock="False" AllowClose="False" AllowContextMenu="False" AllowMaximize="False" AllowDockToDocumentGroup="False" ShowCloseButton="False"  ShowPinButton="False" ItemHeight="7*">
                        <localPage:EDeliveryMappingGrid  x:Name="dgEdeliveryMappingGrid" AutoGenerateColumns="None" HorizontalAlignment="Stretch">
                            <localPage:EDeliveryMappingGrid.Columns>
                                <localPage:CorasauDataGridTemplateColumnClient x:Name="XmlTag" Binding="{Binding Path=XmlTag, Mode=TwoWay, Converter={StaticResource ListToStringConverter}}">
                                    <localPage:CorasauDataGridTemplateColumnClient.DisplayTemplate>
                                        <ControlTemplate>
                                            <TextBlock Text="{Binding DataContext.RowData.Row.XmlTag,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"/>
                                        </ControlTemplate>
                                    </localPage:CorasauDataGridTemplateColumnClient.DisplayTemplate>
                                    <localPage:CorasauDataGridTemplateColumnClient.CellTemplate>
                                        <DataTemplate>
                                            <CorasauControls:ComboBoxEditor GotFocus="cmbXmlTag_GotFocus" x:Name="leXmlTag" SelectedIndexChanged="cmbXmlTag_SelectedIndexChanged"/>
                                        </DataTemplate>
                                    </localPage:CorasauDataGridTemplateColumnClient.CellTemplate>
                                </localPage:CorasauDataGridTemplateColumnClient>
                                <localPage:CorasauDataGridTemplateColumnClient x:Name="Table" Binding="{Binding Path=Table, Mode=TwoWay, Converter={StaticResource ListToStringConverter}}">
                                    <localPage:CorasauDataGridTemplateColumnClient.DisplayTemplate>
                                        <ControlTemplate>
                                            <TextBlock Text="{Binding DataContext.RowData.Row.Table,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"/>
                                        </ControlTemplate>
                                    </localPage:CorasauDataGridTemplateColumnClient.DisplayTemplate>
                                    <localPage:CorasauDataGridTemplateColumnClient.CellTemplate>
                                        <DataTemplate>
                                            <CorasauControls:ComboBoxEditor GotFocus="cbTable_GotFocus" x:Name="cbTable" SelectedIndexChanged="cbTable_SelectedIndexChanged"/>
                                        </DataTemplate>
                                    </localPage:CorasauDataGridTemplateColumnClient.CellTemplate>
                                </localPage:CorasauDataGridTemplateColumnClient>
                                <localPage:CorasauDataGridTemplateColumnClient x:Name="Property" Binding="{Binding Path=Property, Mode=TwoWay, Converter={StaticResource ListToStringConverter}}">
                                    <localPage:CorasauDataGridTemplateColumnClient.DisplayTemplate>
                                        <ControlTemplate>
                                            <TextBlock Text="{Binding DataContext.RowData.Row.Property,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"/>
                                        </ControlTemplate>
                                    </localPage:CorasauDataGridTemplateColumnClient.DisplayTemplate>
                                    <localPage:CorasauDataGridTemplateColumnClient.CellTemplate>
                                        <DataTemplate>
                                            <CorasauControls:ComboBoxEditor GotFocus="cbProperty_GotFocus" x:Name="cbProperty" SelectedIndexChanged="cbProperty_SelectedIndexChanged"/>
                                        </DataTemplate>
                                    </localPage:CorasauDataGridTemplateColumnClient.CellTemplate>
                                </localPage:CorasauDataGridTemplateColumnClient>
                                <localPage:CorasauDataGridTemplateColumnClient x:Name="Value" Width="100" Visible="False"/>
                            </localPage:EDeliveryMappingGrid.Columns>
                        </localPage:EDeliveryMappingGrid>
                    </docking:LayoutPanel>
                </docking:LayoutGroup>
            </docking:DockLayoutManager>
        </CorasauControls:BusyIndicator>
    </Grid>
</Pages:GridBasePage>