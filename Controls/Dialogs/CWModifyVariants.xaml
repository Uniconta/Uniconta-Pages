<ClientTools:ChildWindow x:Class="UnicontaClient.Controls.Dialogs.CWModifyVariants"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ClientTools="clr-namespace:Uniconta.ClientTools;assembly=ClientTools"
             xmlns:CorasauControls="clr-namespace:Uniconta.ClientTools.Controls;assembly=ClientTools"
                         Width="300" Height="{StaticResource Height2}">
    <Grid x:Name="LayoutRoot" Margin="2" Background="{StaticResource LayoutGridColor}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!-- Variant 1-->
            <TextBlock x:Name="txbVariant1" Text="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=Variant}" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <CorasauControls:VariantEditor x:Name="leVariant" Margin="5,0,0,0" EditValue="{Binding Variant, Mode=TwoWay}" VerticalAlignment="Center" Width="120" HorizontalAlignment="Left" Grid.Column="1" />
        </Grid>
        <StackPanel x:Name="actionButton" HorizontalAlignment="Right" Grid.Row="1" Orientation="Horizontal" Margin="0 10 0 0">
            <Button x:Name="OKButton" IsDefault="True" Content="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=Save}" Click="OKButton_Click" MinWidth="75" Height="23"
                    HorizontalAlignment="Right" Margin="0 0 3 0" />
            <Button x:Name="CancelButton" IsCancel="True" Content="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=Cancel}" Click="CancelButton_Click" MinWidth="75" Height="23"
                    HorizontalAlignment="Right"  />
        </StackPanel>
    </Grid>
</ClientTools:ChildWindow>
