<Pages:GridBasePage xmlns:Pages="clr-namespace:Uniconta.ClientTools.Page;assembly=ClientTools"    
   xmlns:UC="clr-namespace:UnicontaClient.Pages;assembly=UnicontaPages"
x:Class="UnicontaClient.Pages.CustomPage.TransactionReport"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
    xmlns:CorasauControls="clr-namespace:Uniconta.ClientTools.Controls;assembly=ClientTools"
    xmlns:localPage="clr-namespace:UnicontaClient.Pages.CustomPage" 
    xmlns:Util="clr-namespace:Uniconta.ClientTools.Util;assembly=ClientTools" 
    xmlns:editor="http://schemas.devexpress.com/winfx/2008/xaml/editors">
    <UserControl.Resources>
        <SolidColorBrush x:Key="LayoutGridColor" Color="Transparent" />
        <Util:VisibilityBoolConverter x:Key="VisibilityBoolConverter" />
        <Util:ImageNameToImagesourceConverter x:Key="ImageNameToImagesourceConverter"/>
        <Util:RowIndexConverter x:Key="RowIndexConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="{StaticResource LayoutGridColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <CorasauControls:CorasauRibbonControl x:Name="localMenu" XMLSourcePath=";component/Pages/GL/Reports/TransactionReportRibbon.xml"/>
        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnSerach" Grid.Column="12" Grid.Row="0" Margin="10,3,3,3" Content="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=Search}" Height="23" Width="80" Click="btnSerach_Click"/>
            <TextBlock Text="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=FromDate}" Grid.Column="0" Grid.Row="0" Margin="3,3,3,3"/>
            <CorasauControls:DateEditor x:Name="txtDateFrm" Grid.Column="2" Grid.Row="0" Margin="0,3,3,3"/>
            <TextBlock Text="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=ToDate}" Grid.Column="0" Grid.Row="1" Margin="3,3,3,3"/>
            <CorasauControls:DateEditor x:Name="txtDateTo" Grid.Column="2" Grid.Row="1" Margin="0,3,3,3"/>
            <TextBlock x:Name="lblDim1" Grid.Column="4" Grid.Row="0" Margin="10,3,3,3"/>
            <CorasauControls:DimComboBoxEditor Width="200" x:Name="cbdim1" Grid.Column="6" Grid.Row="0" Margin="10,3,3,3" ShowCustomItems="False" ShowClearButton="True">
                <CorasauControls:DimComboBoxEditor.StyleSettings>
                    <editor:CheckedComboBoxStyleSettings />
                </CorasauControls:DimComboBoxEditor.StyleSettings>
            </CorasauControls:DimComboBoxEditor>
            <TextBlock x:Name="lblDim2" Grid.Column="4" Grid.Row="1" Margin="10,3,3,3"/>
            <CorasauControls:DimComboBoxEditor Width="200" x:Name="cbdim2" Grid.Column="6" Grid.Row="1" Margin="10,3,3,3" ShowCustomItems="False" ShowClearButton="True">
                <CorasauControls:DimComboBoxEditor.StyleSettings>
                    <editor:CheckedComboBoxStyleSettings />
                </CorasauControls:DimComboBoxEditor.StyleSettings>
            </CorasauControls:DimComboBoxEditor>
            <TextBlock x:Name="lblDim3" Grid.Column="4" Grid.Row="2" Margin="10,3,3,3"/>
            <CorasauControls:DimComboBoxEditor Width="200" x:Name="cbdim3" Grid.Column="6" Grid.Row="2" Margin="10,3,3,3" ShowCustomItems="False" ShowClearButton="True">
                <CorasauControls:DimComboBoxEditor.StyleSettings>
                    <editor:CheckedComboBoxStyleSettings />
                </CorasauControls:DimComboBoxEditor.StyleSettings>
            </CorasauControls:DimComboBoxEditor>
            <TextBlock x:Name="lblDim4" Grid.Column="4" Grid.Row="3" Margin="10,3,3,3"/>
            <CorasauControls:DimComboBoxEditor Width="200" x:Name="cbdim4" Grid.Column="6" Grid.Row="3" Margin="10,3,3,3" ShowCustomItems="False" ShowClearButton="True">
                <CorasauControls:DimComboBoxEditor.StyleSettings>
                    <editor:CheckedComboBoxStyleSettings />
                </CorasauControls:DimComboBoxEditor.StyleSettings>
            </CorasauControls:DimComboBoxEditor>
            <TextBlock x:Name="lblDim5" Grid.Column="4" Grid.Row="4" Margin="10,3,3,3"/>
            <CorasauControls:DimComboBoxEditor Width="200" x:Name="cbdim5" Grid.Column="6" Grid.Row="4" Margin="10,3,3,3" ShowCustomItems="False" ShowClearButton="True">
                <CorasauControls:DimComboBoxEditor.StyleSettings>
                    <editor:CheckedComboBoxStyleSettings />
                </CorasauControls:DimComboBoxEditor.StyleSettings>
            </CorasauControls:DimComboBoxEditor>

            <TextBlock Text="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=Ascending}" Grid.Column="8" Grid.Row="0" Margin="10,3,3,3"/>
            <CheckBox x:Name="cbxAscending" Grid.Column="10" Grid.Row="0" Margin="10,3,3,3" IsChecked="true"/>

            <TextBlock Text="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=ShowDimOnPrimo}" Grid.Column="8" Grid.Row="1" Margin="10,3,3,3"/>
            <CorasauControls:ComboBoxEditor x:Name="cmbShowDimOnPrimo" Width="200"  Grid.Column="10" Grid.Row="1" Margin="10,3,3,3"/>

            <TextBlock Text="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=IncludeJournal}" Grid.Column="8" Grid.Row="2" Margin="10,3,3,3"/>
            <CorasauControls:ComboBoxEditor x:Name="cmbJournal" Width="200" Grid.Column="10" Grid.Row="2" Margin="10,3,3,3">
                <CorasauControls:ComboBoxEditor.StyleSettings>
                    <editor:CheckedComboBoxStyleSettings />
                </CorasauControls:ComboBoxEditor.StyleSettings>
            </CorasauControls:ComboBoxEditor>

        </Grid>
        <CorasauControls:BusyIndicator x:Name="busyIndicator" Grid.Row="2" BusyContent="{Binding Converter={StaticResource GlobalLocalizationValueConverter},ConverterParameter=LoadingMsg}">
            <localPage:GLTranGrid x:Name="dgGLTran" AutoGenerateColumns="None"  >
                <localPage:GLTranGrid.Columns>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Date" Width="90"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="NumberSerie" Width="50"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Voucher" Width="70" AllowThousandMask="false"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="VoucherLine" Width="50" AllowThousandMask="false" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="VoucherX" Width="90" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Text" Width="200"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="TransType" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Debit" Width="100"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Credit" Width="100"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Amount" Visible="False" Width="100"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Total" Width="100"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Account" Visible="False"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Vat" Width="50" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="VatOperation" Width="30" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="AmountVat" Width="100"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Currency" Width="35" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="AmountCur" Width="100"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="TotalCur" Width="100"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="AmountBase" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="HasVoucher" Width="50"  PrintCellStyle="{StaticResource VoucherColumnLinkPrintingStyle}">
                        <localPage:CorasauDataGridTemplateColumnClient.HeaderTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Converter={StaticResource ImageNameToImagesourceConverter}, ConverterParameter=Attachments_16x16.svg}" Width="16" Height="16" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </localPage:CorasauDataGridTemplateColumnClient.HeaderTemplate>
                        <localPage:CorasauDataGridTemplateColumnClient.DisplayTemplate>
                            <ControlTemplate>
                                <Image Margin="5" Tag="{Binding DataContext.RowData.Row,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" VerticalAlignment="Center" 
                                       Source="{Binding Converter={StaticResource ImageNameToImagesourceConverter}, ConverterParameter=Attachments_16x16.svg}" Cursor="Hand"
                                       MouseLeftButtonDown="HasVoucherImage_MouseLeftButtonDown" Visibility="{Binding DataContext.RowData.Row.HasVoucher,RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource VisibilityBoolConverter}}" 
                                       Stretch="Fill" Width="16" Height="16" />
                            </ControlTemplate>
                        </localPage:CorasauDataGridTemplateColumnClient.DisplayTemplate>
                    </localPage:CorasauDataGridTemplateColumnClient>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="JournalPostedId" Width="50" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Origin" Width="100" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="DCType" Width="50" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="DCAccount" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="DCName"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Qty" Visible="False" Width="70"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="ReferenceNumber" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Project" Width="90" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="ProjectName" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="LegalIdent" Visible="False"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Invoice" Width="70" Visible="False"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="DocumentDate" Width="85" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="DocumentRef" Width="50" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="DebitCur"  Visible="False"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="CreditCur"  Visible="False"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Correction" Width="50" Visible="False"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Canceled" Width="50" Visible="False"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Accrued" Width="50" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="Allocated" Width="50" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="PostCalculated" Width="50" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="VatEntered" Width="50" Visible="False" />
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="cldim1" Width="70" FieldName="Dimension1" ShowInColumnChooser="False"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="cldim2" Width="70" FieldName="Dimension2" ShowInColumnChooser="False"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="cldim3" Width="70" FieldName="Dimension3" ShowInColumnChooser="False"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="cldim4" Width="70" FieldName="Dimension4" ShowInColumnChooser="False"/>
                    <localPage:CorasauDataGridTemplateColumnClient x:Name="cldim5" Width="70" FieldName="Dimension5" ShowInColumnChooser="False"/>
                </localPage:GLTranGrid.Columns>
                <localPage:GLTranGrid.TotalSummary>
                    <localPage:SumColumn FieldName="Debit" SummaryType="Sum" DisplayFormat="{}{0:N2}"/>
                    <localPage:SumColumn FieldName="Credit" SummaryType="Sum" DisplayFormat="{}{0:N2}"/>
                    <localPage:SumColumn FieldName="Amount" SummaryType="Sum" DisplayFormat="{}{0:N2}"/>
                    <localPage:SumColumn FieldName="DebitCur" SummaryType="Sum" DisplayFormat="{}{0:N2}"/>
                    <localPage:SumColumn FieldName="CreditCur" SummaryType="Sum" DisplayFormat="{}{0:N2}"/>
                    <localPage:SumColumn FieldName="AmountCur" SummaryType="Sum" DisplayFormat="{}{0:N2}"/>
                    <localPage:SumColumn FieldName="Qty" SummaryType="Sum" DisplayFormat="{}{0:N2}"/>
                    <localPage:SumColumn FieldName="Text" SummaryType="Count" />
                </localPage:GLTranGrid.TotalSummary>
            </localPage:GLTranGrid>
        </CorasauControls:BusyIndicator>
    </Grid>
</Pages:GridBasePage>
